{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "outDir": "dist"
  },
  "include": ["src", "scripts", "test", "package.json"],
  "exclude": ["node_modules", "dist", "out"],
  "typedocOptions": {
    "entryPoints": [
      "src/wallet.js",
      "src/token.js",
      "src/address.js",
      "src/message.js",
      "src/rpc.js",
      "src/signature.js",
      "src/utils.js"
    ],
    "includeVersion": true,
    "excludeExternals": true,
    "internalModule": "<internal>"
  }
}
